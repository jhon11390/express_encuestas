extends layout

block content
  div(class="container mt-4")
    div(class="row mb-4")
      div(class="col")
        a(href="/polls/new", class="btn btn-success btn-sm") Nueva Encuesta
    
    div(class="row")
      each poll in polls
        div(class="col-4")
          div(class="card" style="width: 18rem;")
            div(class="card-body")
              div(class="row justify-content-end")
                div(class="col-4")
                  form(action="/polls/"+poll._id+"?_method=DELETE", method="POST")
                    input(type="submit", value="Eliminar", onclick="return confirm('Are you sure?')", class="btn btn-link")
              h3(class="card-title")
                strong= poll.title
              h6(class="card-subtitle mb-2 text-muted") Creada por jhon ortega
              br
              p(class="card-text")= poll.description
              hr
              div(class="row")
                div(class="col text-center")
                  a(href="#" class="card-link text-muted") 7 votos
                div(class="col text-center")
                  a(href="/polls/"+poll._id, class="card-link") Votar
  
              