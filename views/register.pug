extends layout

block content
  div(class="container mt-4")
    div(class="row justify-content-center")
      div(class="col-5 card pt-2 pb-2")
        h4 Sign Up
        hr
        form(action="/register", method="post")
          div(class="form-group")
            label(for="email")
              strong Email
            input(type="email", class="form-control", id="email", name="email", placeholder="Ingrese su email")
          div(class="form-group mb-4")
            label(for="password")
              strong Password
            input(type="password", class="form-control", id="password", name="password", placeholder="Ingrese su email")
          hr
          div(class="row mt-4")
            div(class="col-auto mr-auto")
              a(href="/login", class="btn btn-link") Login
            div(class="col-auto")
              button(type="submit", class="btn btn-success") Sign Up
          