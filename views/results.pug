extends layout

block content
  div(class="container mt-4")
    div(class="row justify-content-center")
      div(class="col-5")
        div(class="row")
          div(class="col-auto mr-auto")
           div(class="btn-group" role="group" arial-label="Basic-example")
              a(class="btn btn-link", href="/")
                <i class="fas fa-link">l</i>
              a(class="btn btn-link", href="/") back

          div(class="col-auto")
            div(class="btn-group" role="group" arial-label="Basic-example")
              button(type="button" class="btn btn-link")
                <i class="fas fa-link">l</i>
              button(type="button" class="btn btn-link")
                <i class="fab fa-facebook-square">l</i>
              button(type="button" class="btn btn-link")
                <i class="fab fa-twitter">l</i>

    div(class="row justify-content-center")
      div(class="col-5")
        div(class="card")
          div(class="card-header") 
            h4
              strong= currentPoll.title
          div(class="card-body")
            blockquote(class="blockquote mb-0")
              p= currentPoll.description
              footer(class="blockquote-footer") Encuesta hecha por 
                cite(title="Source Title") Fernando Silva
    
    div(class="row mt-4 justify-content-center")
      div(class="col-5")
        div(class="card")
          div(class="card-body")
            h5(class="card-title") 
              strong Resultados:
            div(class="row mb-4")
              div(class="col")  
                h6 Option 2 votos
                div(class="progress")
                  div(class="progress-bar bg-success", role="progressbar", style="width: 25%;", aria-valuenow="25", aria-valuemin="0", aria-valuemax="100") 25%
            div(class="row mb-4")
              div(class="col")  
                h6 Option 2 votos
                div(class="progress")
                  div(class="progress-bar bg-success", role="progressbar", style="width: 50%;", aria-valuenow="50", aria-valuemin="0", aria-valuemax="100") 50%
            div(class="row mb-4")
              div(class="col")  
                h6 Option 2 votos
                div(class="progress")
                  div(class="progress-bar bg-success", role="progressbar", style="width: 100%;", aria-valuenow="100", aria-valuemin="0", aria-valuemax="100") 100%
    
